// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html

{
  "extends": "@minna-ui/ts-config",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "target": "es2018",

    // disable overly strict rules
    "noUnusedParameters": false
  },
  "include": ["src"]
}
