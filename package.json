{
  "name": "@wearegenki/node-utils",
  "version": "0.1.2",
  "description": "Reusable utilities for node apps.",
  "repository": "https://github.com/WeAreGenki/node-utils",
  "bugs": "https://github.com/WeAreGenki/node-utils/issues",
  "homepage": "https://github.com/WeAreGenki/node-utils",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput",
    "build": "tsc",
    "prebuild": "rm -rf lib",
    "postbuild": "cp src/types.d.ts lib/",
    "release": "yarn publish",
    "prerelease": "yarn lint && yarn test-ci && yarn build",
    "lint": "yarn lint:md && yarn lint:js && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:js": "eslint --ext html,js,md,svelte,ts .",
    "lint:types": "tsc --noEmit",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "peerDependencies": {
    "tslib": "1.9.3"
  },
  "dependencies": {
    "colorette": "^1.0.7"
  },
  "devDependencies": {
    "@wearegenki/renovate-config": "1.0.0",
    "eslint": "5.16.0",
    "jest": "24.6.0",
    "minna-tools": "0.22.0-next.332",
    "prettier": "1.16.4",
    "remark-cli": "6.0.1",
    "svelte": "3.0.0-beta.23",
    "tslib": "1.9.3",
    "typescript": "3.4.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./node_modules/minna-tools/eslint.js"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "lib/**",
    "test/coverage/**"
  ],
  "remarkConfig": {
    "plugins": [
      "minna-tools/remark"
    ]
  },
  "jest": {
    "preset": "minna-tools",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">10.0.0",
    "yarn": ">1.12.0"
  },
  "os": [
    "!win32",
    "darwin",
    "freebsd",
    "linux",
    "openbsd"
  ],
  "publishConfig": {
    "access": "public"
  }
}
