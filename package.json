{
  "name": "@wearegenki/node-utils",
  "version": "0.3.0",
  "description": "Reusable utilities for node apps.",
  "repository": "https://github.com/WeAreGenki/node-utils",
  "bugs": "https://github.com/WeAreGenki/node-utils/issues",
  "homepage": "https://github.com/WeAreGenki/node-utils",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput",
    "build": "tsc",
    "prebuild": "rm -rf lib",
    "postbuild": "cp src/types.d.ts lib/",
    "release": "yarn publish",
    "prerelease": "yarn lint && yarn test-ci && yarn build",
    "lint": "yarn lint:md && yarn lint:js && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:js": "eslint --ext html,js,md,svelte,ts .",
    "lint:types": "tsc --noEmit",
    "test": "yarn lint && jest --notify --watch",
    "test-ci": "jest --coverage --runInBand --ci"
  },
  "dependencies": {
    "colorette": "^1.0.7"
  },
  "devDependencies": {
    "@minna-ui/eslint-config": "0.32.0",
    "@minna-ui/jest-config": "0.34.0",
    "@minna-ui/prettier-config": "0.32.0",
    "@minna-ui/remark-config": "0.32.0",
    "@minna-ui/ts-config": "0.32.0",
    "@wearegenki/renovate-config": "1.0.0",
    "eslint": "6.3.0",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "remark-cli": "7.0.0",
    "tslib": "1.10.0",
    "typescript": "3.6.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "lib/**",
    "test/coverage/**"
  ],
  "remarkConfig": {
    "plugins": [
      "@minna-ui/remark-config"
    ]
  },
  "jest": {
    "preset": "@minna-ui/jest-config",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">10.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
