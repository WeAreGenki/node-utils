{
  "name": "@wearegenki/node-utils",
  "version": "0.4.3",
  "description": "Reusable utilities for node apps.",
  "repository": "https://github.com/WeAreGenki/node-utils",
  "bugs": "https://github.com/WeAreGenki/node-utils/issues",
  "homepage": "https://github.com/WeAreGenki/node-utils",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput",
    "build": "tsc",
    "prebuild": "rm -rf dist",
    "postbuild": "cp src/types.d.ts dist/",
    "release": "yarn publish",
    "prerelease": "yarn prepack && yarn lint && yarn test-ci",
    "prepack": "yarn build",
    "lint": "yarn lint:md && yarn lint:js && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:js": "eslint --ext html,js,md,ts .",
    "lint:types": "tsc --noEmit",
    "test": "jest --notify --watch",
    "test-ci": "jest --coverage --ci"
  },
  "dependencies": {
    "colorette": "^1.0.7"
  },
  "devDependencies": {
    "@wearegenki/renovate-config": "1.0.0",
    "eslint": "7.20.0",
    "jest": "26.6.3",
    "minna-tools-essential": "0.36.0",
    "prettier": "2.2.1",
    "remark-cli": "9.0.0",
    "tslib": "2.1.0",
    "typescript": "4.1.3"
  },
  "prettier": "minna-tools-essential/prettier",
  "eslintConfig": {
    "root": true,
    "extends": [
      "./node_modules/minna-tools-essential/eslint.js"
    ]
  },
  "eslintIgnore": [
    "dist/**",
    "test/coverage/**"
  ],
  "remarkConfig": {
    "plugins": [
      "minna-tools-essential/remark"
    ]
  },
  "jest": {
    "preset": "minna-tools-essential",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
